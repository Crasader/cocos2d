<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/skypay_appui_ll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/out_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/skypay_tip_sky"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/pay_bg" />

        <ImageView
            android:id="@+id/skypay_tip_sky_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_cancel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pay_bg_2" />

        <ImageView
            android:id="@+id/skypay_tip2"
            android:layout_width="143dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="60dp" />

        <ImageButton
            android:id="@+id/pay_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/pay_cancel_up" />

        <ImageView
            android:id="@+id/pay_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pay_confirm"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pay_tip_goods_1" />

        <ImageButton
            android:id="@+id/pay_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/payTipsText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/pay_confirm_up" />

        <ImageView
            android:id="@+id/payTipsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pay_tip_goods_text_1" />

         <ImageView
             android:id="@+id/payTipsText2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/pay_confirm"
             android:layout_centerHorizontal="true"
             android:background="@drawable/pay_tip_text"
             android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>